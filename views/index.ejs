<!DOCTYPE html>
<html lang="en" class="scroll-smooth">
<head>
  <meta charset="UTF-8">
  <meta name="viewport" content="width=device-width, initial-scale=1.0">
  <meta http-equiv="X-UA-Compatible" content="ie=edge">
  <title>tripleA | Articles</title>
  <link rel="stylesheet" href="css/style.css">
  <link rel="stylesheet" href="https://cdnjs.cloudflare.com/ajax/libs/font-awesome/6.2.1/css/all.min.css" integrity="sha512-MV7K8+y+gLIBoVD59lQIYicR65iaqukzvf/nwasF0nqhPay5w/9lJmVM2hMDcnK1OnMGCdVK+iQrJ7lzPJQd1w==" crossorigin="anonymous" referrerpolicy="no-referrer" />
</head>
<body>
    <%- include('./templates/header_user') %> 

    <section class="py-32">
        <div class="container">
            <div class="text-center">
                <p class="text-4xl mb-16">Welcome to <span class="font-bold text-prim">tripleA</span>, <br> <span class="text-prim font-bold"><a href="https://ahsanAazizan.github.io" class="hover-underline-animation">ahsanazizan</a></span>'s personal blogging site.</p>
            </div>
        </div>
    </section>

    <section id="articles" class="pb-36">
        <div class="container">
            <div class="mx-auto flex flex-wrap">
                <% articles.forEach(article => { %>
                    <div class="w-1/2">
                        <div class="border-t-2 px-4 py-10">
                            <a class="text-3xl font-bold" href="/articles/<%= article.slug %>"><%= article.title %></a>
                            <div class="flex flex-wrap">
                                <% article.tags.forEach(tag => { %>
                                    <p class="text-base text-prim mr-3 font-bold">
                                        <%= tag %>
                                    </p> 
                                <% }) %> 
                            </div>
                            <div class="opacity-75 mb-6 mt-1">
                                Posted on <%= article.createdAt.toDateString()%> by <%= article.createdBy %> 
                            </div>
                            <p class="text-base mb-10 font-normal max-w-md"><%= article.description %></p>
                            <a href="/articles/<%= article.slug %>" class="text-base opacity-80 text-prim rounded-sm px-3 py-2 hover:text-white border border-prim hover:bg-prim transition duration-300 ease-in-out mr-5">Read <i class="fa-solid fa-book-open ml-1"></i></a>
                        </div>
                    </div>
                <% }) %>
            </div>
        </div>
    </section>

    <footer class="bg-slate-900 pb-12">
        <div class="w-full pt-10 border-t border-white">
            <p class="font-semibold text-md text-center text-white">&copy; Ahsan Awadullah Azizan 2022</p>
        </div>
    </footer>
  <%- include('templates/_footer') %> 